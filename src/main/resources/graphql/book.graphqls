type Book {
  id: ID!
  title: String!
  publisher: Publisher!
  authors: [Author]!
}

input BookFilter {
  ids: [ID]
  titles: [String]
  publisherIds: [Int]
  authorIds: [Int]
}

extend type Query {
  findBooks(filter: BookFilter): [Book]!
}

extend type Mutation {
  createBook(title: String!, publisherId: Int!, authorId: Int!): Book!
  relateAuthorToBook(bookId: Int!, authorId: Int!): Boolean!
}
